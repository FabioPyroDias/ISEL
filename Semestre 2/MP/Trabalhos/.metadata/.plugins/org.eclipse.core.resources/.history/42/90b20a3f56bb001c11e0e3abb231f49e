		System.out.println("Expectável : 5.5p  | Recebido: " + livroTeste2.getNumPaginas());
		System.out.println("Expectável : 18.79p  | Recebido: " + livroTeste3.getNumPaginas());
		System.out.println("Expectável : 0.99p  | Recebido: " + livroTeste4.getNumPaginas());
		System.out.println("Expectável : 21.31p | Recebido: " + livroTeste5.getNumPaginas());
		
		System.out.println();
		System.out.println("################################# -xXx getPreco xXx- #################################");
		
		System.out.println();
		System.out.println();
		
 	}
}
