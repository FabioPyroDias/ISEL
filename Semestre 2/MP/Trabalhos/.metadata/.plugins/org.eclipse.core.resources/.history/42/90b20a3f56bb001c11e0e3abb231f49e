		{
			ex.printStackTrace();
		}
		System.out.println();
		
		System.out.println("################################# -xXx Título xXx- #################################");
		
		System.out.println();
		System.out.println();
		
		//Páginas
		System.out.println("################################# - Páginas - #################################");
		System.out.println();
		
		System.out.println("     #Páginas são 0");
		try {
			Livro meuLivroErro = new Livro("Título Exemplo", 0, 20.0f, new String[] {"Autor Teste"});			
