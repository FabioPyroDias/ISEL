package tp4;

public class ItemGenerator {
	
	public Item generateItem()
	{
		String rarity = generateRarity();
		String type = generateType();
		
		return new Item("", rarity, type, 0, 0, 0);
	}
	
	private String generateRarity()
	{
		String[] rarity = {"Common", "Uncommon", "Rare", "Legendary"};
		int maxValue = 4;
		int minValue = 0;
		
		return rarity[(int)(Math.random()*(maxValue-minValue+1)+minValue)];
	}
	
	private String generateType()
	{
		String[] type = {"Weapon", "Helmet", "Armor", "Pants", "Gloves", "Boots"};
		int maxValue = 6;
		int minValue = 0;
		
		return type[(int)(Math.random()*(maxValue-minValue+1)+minValue)];
	}
	
	private String generateName(String rarity, String type)
	{
		//Por fazer. Pode envolver um ficheiro com nomes
		
		return null;
	}
	
	private int generateHealthModifier(String rarity, String type)
	{
		int maxValue = 0;
		int minValue = 0;
		
		switch(rarity)
		{
			case "Common":
				
				switch(type)
				{
					case "Weapon":
						maxValue = 0;
						minValue = 0;
						break;
						
					case "Helmet":
						maxValue = 50;
						minValue = 20;
						
						break;
						
					case "Armor":
						maxValue = 80;
						minValue = 30;
						
						break;
						
					case "Pants":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
					
					case "Gloves":
						maxValue = 1.04f;
						minValue = 1.01f;
						
						break;
						
					case "Boots":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
							
					default:
						break;	
				}
				
				break;
				
			case "Uncommon":
				
				switch(type)
				{
					case "Weapon":
						maxValue = 0;
						minValue = 0;
						
						break;
						
					case "Helmet":
						maxValue = 1.11f;
						minValue = 1.05f;
						
						break;
						
					case "Armor":
						maxValue = 1.18f;
						minValue = 1.08f;
						
						break;
						
					case "Pants":
						maxValue = 1.08f;
						minValue = 1.03f;
						
						break;
					
					case "Gloves":
						maxValue = 1.06f;
						minValue = 1.02f;
						
						break;
						
					case "Boots":
						maxValue = 1.07f;
						minValue = 1.02f;
						
						break;
							
					default:
						break;	
				}
				
				break;
				
			case "Rare":
				
				switch(type)
				{
					case "Weapon":
						maxValue = 0;
						minValue = 0;
						
						break;
						
					case "Helmet":
						maxValue = 1.19f;
						minValue = 1.09f;
						
						break;
						
					case "Armor":
						maxValue = 1.10f;
						minValue = 1.02f;
						
						break;
						
					case "Pants":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
					
					case "Gloves":
						maxValue = 1.04f;
						minValue = 1.01f;
						
						break;
						
					case "Boots":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
							
					default:
						break;	
				}
				
				break;
				
			case "Legendary":
				
				switch(type)
				{
					case "Weapon":
						maxValue = 0;
						minValue = 0;
						
						break;
						
					case "Helmet":
						maxValue = 1.06f;
						minValue = 1.01f;
						
						break;
						
					case "Armor":
						maxValue = 1.10f;
						minValue = 1.02f;
						
						break;
						
					case "Pants":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
					
					case "Gloves":
						maxValue = 1.04f;
						minValue = 1.01f;
						
						break;
						
					case "Boots":
						maxValue = 1.05f;
						minValue = 1.01f;
						
						break;
							
					default:
						break;	
				}
				
				break;
				
			default:
				break;
		}
		
		return (float)(Math.random()*(maxValue-minValue+1)+minValue);
	}
	
	private int generateAttackModifier(String rarity, String type)
	{
		return 0;
	}
	
	private int generateDefenseModifier(String rarity, String type)
	{
		return 0;
	}
}