	public Enemy generateEnemy(int level)
	{
		int health = 0;
		int attack = 0;
		int defense = 0;
		float ratio;
		int minHealthValue;
		int maxHealthValue;
		int minAttackValue;
		int maxAttackValue;
		int minDefenseValue;
		int maxDefenseValue;
		
		if(level > 0 && level < 5)
		{
			ratio = level / 4;

			minHealthValue = 20;
			maxHealthValue = 70;
		
			minAttackValue = 15;
			maxAttackValue = 40;
			
			minDefenseValue = 10;
			maxDefenseValue = 40;
			
			health = (int)(ratio * Math.random()*(maxHealthValue-minHealthValue+1)+minHealthValue);
		}
		else if(level >= 5 && level < 11)
		{
			ratio = level / 10;
			
			
		}
		else if(level >= 11 && level < 19)
		{
			ratio = level / 18;
		}
		else if(level >= 19 && level < 30)
		{
			ratio = level / 29;
		}
		else if(level >= 30 && level < 45)
		{
			ratio = level / 44;
		}
		else
		{
			
		}
		
		return new Enemy(names[(int)(Math.random()*(names.length+1))], 0, 0, 0, races[(int)(Math.random()*(races.length+1))]);
	}
	
}